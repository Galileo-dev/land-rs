+#[cfg(feature = "clarabel")]
+mod clarabel_soc_tests {
+    use std::f64::consts::{FRAC_1_SQRT_2, SQRT_2};
+
+    use clarabel::solver::SupportedConeT;
+    use float_eq::assert_float_eq;
