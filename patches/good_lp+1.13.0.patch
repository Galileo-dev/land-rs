+    fn test_soc_constraint_structure() {
+        let mut vars = variables!();
+        let v = vars.add_vector(variable(), 3);
+
+        let soc_cons = soc_constraint!(norm2(v[0] + v[1] + v[2]) <= v[0] * 2);
+
